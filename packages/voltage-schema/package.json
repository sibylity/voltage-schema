{
  "name": "voltage-schema",
  "version": "1.5.0",
  "description": "The analytics schema that evolves with your software.",
  "main": "./dist/cli/index.js",
  "types": "./dist/cli/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy-schemas",
    "copy-schemas": "mkdir -p dist/schemas && cp src/schemas/*.json dist/schemas/",
    "start": "node ./dist/cli/index.js",
    "init": "node ./dist/cli/index.js init",
    "generate": "node ./dist/cli/index.js generate",
    "validate": "node ./dist/cli/index.js validate",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "exports": {
    ".": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    },
    "./tracker": {
      "types": "./dist/cli/tracker/index.d.ts",
      "default": "./dist/cli/tracker/index.js"
    }
  },
  "bin": {
    "voltage-schema": "./dist/cli/index.js"
  },
  "keywords": [],
  "author": "Matthew Rheault",
  "license": "ISC",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.19",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "ajv": "^8.12.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
