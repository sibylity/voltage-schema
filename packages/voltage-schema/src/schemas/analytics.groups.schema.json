{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["groups"],
  "properties": {
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "properties"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the group"
          },
          "description": {
            "type": "string",
            "description": "A description of what the group represents"
          },
          "properties": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "The name of the property"
                },
                "type": {
                  "type": "string",
                  "description": "The type of the property (string, number, boolean, etc.)"
                },
                "description": {
                  "type": "string",
                  "description": "A description of what the property represents"
                }
              }
            }
          }
        }
      }
    }
  }
}
