{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "groups": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "properties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "description": { "type": "string" },
                "type": {
                  "oneOf": [
                    { "enum": ["string", "number", "boolean", "string[]", "number[]", "boolean[]"] },
                    { "type": "array", "items": { "type": ["string", "number", "boolean"] } }
                  ]
                },
                "optional": {
                  "type": "boolean",
                  "default": false
                },
                "value": {
                  "type": ["string", "number", "boolean", "array", "object"],
                  "description": "Optional fixed value for the property"
                }
              },
              "required": ["name", "type"]
            }
          },
          "passthrough": {
            "type": "boolean",
            "default": false
          },
          "identifiedBy": {
            "type": "string"
          }
        },
        "required": ["name", "description", "properties"]
      }
    }
  },
  "required": []
} 